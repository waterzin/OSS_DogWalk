<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- 배경 색상: 연한 크림색 -->
            <solid android:color="#FFF8EE" />

            <!-- 테두리 색상: 밝은 주황 -->
            <stroke
                android:width="2dp"
                android:color="#F4B367" />

            <!-- 모서리 둥글기 조절 -->
            <corners android:radius="16dp"/>

            <!-- 버튼 안쪽 여백 -->
            <padding
                android:left="16dp"
                android:top="10dp"
                android:right="16dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>
