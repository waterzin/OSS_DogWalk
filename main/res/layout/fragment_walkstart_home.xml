<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/walk_home"
    android:background="#FDFAF8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- 날짜 텍스트 -->
        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            android:text="2025년 5월 9일"
            android:background="@drawable/date_background"
            android:textColor="#000000"
            android:textSize="18sp" />


        <!-- 강아지 이미지 -->
        <ImageView
            android:id="@+id/image_dog"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/dog_image"
            android:contentDescription="강아지 이미지" />

        <!-- 산책 시작 버튼 -->
        <Button
            android:id="@+id/button_start_walk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="산책 시작"
            android:elevation="8dp"
            android:translationZ="4dp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:backgroundTint="#FF6E00"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <!-- 산책 기록하기 버튼 -->
    </LinearLayout>
</ScrollView>
